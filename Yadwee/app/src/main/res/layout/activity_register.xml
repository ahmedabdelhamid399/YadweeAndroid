

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9dc3e6"
    tools:context=".Register"
    >


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="142dp"
            android:layout_marginLeft="0dp"
            app:srcCompat="@drawable/yadweelogo" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imdvilogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:text="Register"
            android:textColor="@android:color/background_light"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>


    <EditText
        android:id="@+id/txtusername"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linearlayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_edittext"
        android:drawableLeft="@drawable/icon_person"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtusername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_edittext"
        android:drawableLeft="@drawable/icon_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtemail"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_edittext"
        android:drawableLeft="@drawable/icon_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <EditText
        android:id="@+id/txtconfirmpassword"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtpassword"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_edittext"
        android:drawableLeft="@drawable/icon_password"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <TextView
        android:id="@+id/txtvvalidusername"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_below="@+id/linearlayout"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/txtusername"
        android:text="*"
        android:textColor="#FF9A3946"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtvvalidemail"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_below="@+id/txtvvalidusername"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/txtemail"
        android:text="*"
        android:textColor="#FF9A3946"
        android:textSize="30sp"

        />

    <TextView
        android:id="@+id/txtvvalidpassword"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_below="@+id/txtvvalidemail"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/txtpassword"
        android:text="*"
        android:textColor="#FF9A3946"
        android:textSize="30sp"/>



    <TextView
        android:id="@+id/txtvalidconfirmpassword"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_below="@+id/txtvvalidpassword"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/txtconfirmpassword"
        android:text="*"
        android:textColor="#FF9A3946"
        android:textSize="30sp"

        />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtconfirmpassword"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Male"
            android:textColorLink="#0070c0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="Female"
            android:textColorLink="#0070c0"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RadioGroup>


    <Button
        android:id="@+id/btnnext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/edit_edittext"
        android:ems="10"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#0070c0"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="You already have an account"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>