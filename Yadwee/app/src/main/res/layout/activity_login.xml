
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#9dc3e6"

    >


    <ImageView
        android:id="@+id/imdvilogo"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/yadweelogo"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imdvilogo"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtvemail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"

        android:text="Email"
        android:textColor="@android:color/background_light"
        android:textSize="29sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtemail2"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtvemail2"

        android:layout_marginLeft="40dp"

        android:layout_marginTop="0dp"

        android:layout_marginRight="20dp"
        android:background="@drawable/edit_edittext"
        android:drawableLeft="@drawable/icon_email"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <TextView
        android:id="@+id/txtvalidemail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:text="Please enter correct email"
        android:textColor="#FF9A3946" />

    <TextView
        android:id="@+id/txtvpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvalidemail2"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"

        android:text="Password"
        android:textColor="@android:color/background_light"
        android:textSize="29sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtpassword2"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtvpassword2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/edit_edittext"

        android:drawableLeft="@drawable/icon_password"

        android:ems="10"
        android:hint="Enter Your password"
        android:inputType="textPassword"
        android:textColor="#0070c0"
        android:textColorHint="@android:color/tertiary_text_light" />

    <TextView
        android:id="@+id/txtvalidpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpassword2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:text="Please enter strong password"
        android:textColor="#FF9A3946" />

    <TextView
        android:id="@+id/txtvforgetpass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvalidpassword2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="You forget your password ? "
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvforgetpass2"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="25dp"
        android:background="@drawable/edit_edittext"
        android:ems="10"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#0070c0"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtvsignup"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="You can create New Account"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>