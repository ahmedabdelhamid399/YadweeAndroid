<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:background="#fff"
    >

    <LinearLayout

        android:id="@+id/linear_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#9dc3e6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtveditprofile"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/circle_person"
            android:paddingLeft="8dp"
            android:hint="  User Name"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <TextView

        android:id="@+id/txtvresult"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_total"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:text="Results"
        android:textColor="#9dc3e6"
        android:textSize="35sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="177dp"
        android:layout_height="189dp"
        android:layout_below="@+id/txtvresult"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/image_card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgviewresult"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"

            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/txtv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="product"
            android:padding="8dp"
            android:textColor="#0070c0"
            android:textColorHint="#0070c0" />

        <TextView
            android:id="@+id/txtv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="price"

            android:padding="8dp"
            android:textColorHint="#0070c0" />
    </LinearLayout>


</RelativeLayout>